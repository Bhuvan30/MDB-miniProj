<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Doctor's Appointments</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
      }

      .appointments-container {
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        max-width: 800px;
        margin: auto;
      }

      .appointments-container h2 {
        color: #333;
        text-align: center;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }

      th,
      td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
      }

      th {
        background-color: #f2f2f2;
      }
    </style>
  </head>
  <body>
    <div class="appointments-container">
      <h2>Doctor's Appointments</h2>

      <table>
        <thead>
          <tr>
            <th>Patient Name</th>
            <th>Email</th>
            <th>Date</th>
            <th>Time</th>
          </tr>
        </thead>
        <tbody>
          <% for (const { pName,pEmail, date, time, _id } of doctapp) {%> <%
          const formattedDate = date.toLocaleDateString('en-US', { year:
          'numeric', month: 'long', day: 'numeric' });%>
          <tr>
            <td><%= pName %></td>
            <td><%= pEmail %></td>
            <td><%= formattedDate %></td>
            <td><%= time %></td>
          </tr>
          <%}%>
        </tbody>
      </table>
    </div>
  </body>
</html>
